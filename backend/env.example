# Configuración de la Base de Datos
# Para desarrollo local
DB_NAME=tienda_virtual
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_HOST=localhost
DB_PORT=5432

# Para producción (usar DATABASE_URL en lugar de las variables individuales)
# DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Configuración del Servidor
NODE_ENV=development
PORT=5000

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# Configuración de Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración de MercadoPago
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_mercadopago

# Configuración de archivos locales
SERVE_LOCAL_UPLOADS=true

# Configuración de email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_app_password

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/express-api.log
